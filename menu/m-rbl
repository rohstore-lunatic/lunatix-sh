Red="\e[91;1m"
# install paket
Rebuild="curl -O https://raw.githubusercontent.com/LunatiX-nc/rebuild/main/reinstall.sh"
curl -O https://raw.githubusercontent.com/bin456789/reinstall/main/reinstall.sh
mv reinstall.sh /usr/bin
chmod +x /usr/bin/reinstall.sh
blue_line() {
    local blue_line=(
        "\033[38;5;22m"  
        "\033[38;5;28m"
        "\033[38;5;34m"
        "\033[38;5;40m"
        "\033[38;5;46m"
        "\033[38;5;47m"
        "\033[38;5;48m"
        "\033[38;5;49m"
        "\033[38;5;82m"  
        "\033[38;5;83m"  
        "\033[38;5;119m"
        "\033[38;5;154m"
        "\033[38;5;190m"
        "\033[38;5;154m"
        "\033[38;5;119m"
        "\033[38;5;83m"
        "\033[38;5;82m"  
        "\033[38;5;49m"
        "\033[38;5;48m"
        "\033[38;5;47m"
        "\033[38;5;46m"
        "\033[38;5;40m"
        "\033[38;5;34m"
        "\033[38;5;28m"
        "\033[38;5;22m"  
    )

    local length=50 

    
    printf "  "

    for ((i = 0; i < ${#blue_line[@]}; i++)); do
        printf "${blue_line[i]}%0.sâ”€" $(seq 1 $((length / ${#blue_line[@]})))
    done

    printf "\033[0m\n"
}
clear
blue_line
echo -e "${Cyan}                  Rebuild and Change OS ${Softex}"
